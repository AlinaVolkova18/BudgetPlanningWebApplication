<table id="example" class="table table-hover table-borderless">
    <thead>
        <tr class="text-center">
            <th class="border-bottom border-primary" style="font-size:larger">
                Название
            </th>
            <th class="border-bottom  border-primary" style="font-size:larger">
                Категория
            </th>
            <th class="border-bottom  border-primary" style="font-size:larger">
                Лимит
            </th>
            <th class="border-bottom  border-primary" style="font-size:larger">
                Дата начала
            </th>
            <th class="border-bottom   border-primary" style="font-size:larger">
                Дата окончания
            </th>
            <th class="border-bottom   border-primary" style="font-size:larger">
                Обязательный платеж
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
                <tr>
                    <td class=" border-top border-primary" style="font-size:larger">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class=" border-top border-primary" style="font-size:larger">
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td class=" border-top border-primary" style="font-size:larger">
                        @Html.DisplayFor(modelItem => item.Limit)
                    </td>
                    <td class="border-top border-primary" style="font-size:larger">
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td class=" border-top border-primary" style="font-size:larger">
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td class=" border-top border-primary" style="font-size:larger">
                        @Html.DisplayFor(modelItem => item.MandatoryPayment.Name)
                    </td>
                    <td @*class="border-top border-primary"*@>
                        <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr> 
        }
    </tbody>
</table>
<br>

<p>
    <a asp-action="Create" class="btn btn-success btn-block btn-lg text-body"
       style="width:400px; background-color: #8fc4b7; color:black;">Добавить новый финансовый план</a>
</p>

