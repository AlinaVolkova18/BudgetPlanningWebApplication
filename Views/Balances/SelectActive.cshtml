@model BudgetPlanningWebApplication.Balance

@{
    ViewData["Title"] = "Изменить баланс";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-pills nav-justified" style="background: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));">
    @*<li class="nav-item">
    <a class="nav-link" role="button" asp-area="" asp-controller="Home" asp-action="Index" style="color:black; font-size:large">Мой кошелек</a>
    </li>*@
    <li class="nav-item">
        <a class="nav-link" style="color:black; font-size:large" role="button"
           asp-area=" " asp-controller="Users" asp-action="Details" asp-route-id="@Convert.ToInt32(Context.Request.Cookies["uId"])">Мой аккаунт</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:black; font-size:large" role="button" asp-area="" asp-controller="Home" asp-action="GoToTransaction">Транзакции</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:black; font-size:large" role="button" asp-area="" asp-controller="FinancialPlans" asp-action="Index">Финансовый план</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:black; font-size:large" asp-area="" asp-controller="RT" asp-action="LogOut">Выход</a>
    </li>
</ul>

<br>
<h2 class="mb-4 text-center">Выберите актив</h2>
<div class="text-center">
    <a asp-action="Edit" asp-area="" asp-controller="Balances" asp-route-activeId="1"
       class="btn btn-success btn-block btn-lg text-body" style="width:300px; background-color: #8fc4b7; color:black;">Наличные</a>
    <a class="btn btn-success btn-block btn-lg text-body" role="button" style="width:300px; background-color: #8fc4b7; color:black;"
       asp-area="" asp-controller="Balances" asp-action="Edit" asp-route-activeId="2">Банковская карта</a>
</div>
<br>
<h2 class="mb-4">Изменение баланса актива "@Html.DisplayFor(model => model.Active.Name)"</h2>
<div>
    <a asp-controller="Users" asp-action="Details" asp-route-id="@Convert.ToInt32(Context.Request.Cookies["uId"])">Вернуться на страницу аккаунта</a>
</div>
<br>
<h3>Введите сумму:</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="Sum" class="form-control" style="width:300px;font-size:larger" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ActiveId" />
            <input type="hidden" asp-for="UserId" />
            <br>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success btn-block btn-lg text-body" style="width:300px;  background-color: #8fc4b7;" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
