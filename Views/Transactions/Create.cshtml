<br>

<h2 class="fw-bold mb-4">Добавление новой транзакции</h2>
<div>
    <a asp-action="Index">Вернуться к списку транзакций</a>
</div>
<br>
<div class="col-lg-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TypeOfTransactionId" value="@ViewData["TypeOfTransactionId"]" />
        <div class="row">
            <div class="col-sm-3">
                <label asp-for="CategoryId" class="control-label mb-0 fw-bold" style="font-size:larger">Категория</label>
                <select asp-for="CategoryId" class="form-control" style="width:300px;font-size:larger" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <label asp-for="ActiveId" class="control-label mb-0 fw-bold" style="font-size:larger">Актив</label>
                <select asp-for="ActiveId" class="form-control" style="width:300px;font-size:larger" asp-items="ViewBag.ActiveId"></select>
                <span asp-validation-for="ActiveId" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <label asp-for="Sum" class="control-label mb-0 fw-bold" style="font-size:larger">Сумма</label>
                <input asp-for="Sum" class="form-control" style="width:300px;font-size:larger" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <label asp-for="Date" class="control-label mb-0 fw-bold" style="font-size:larger">Дата</label>
                <input asp-for="Date" class="form-control" style="width:300px;font-size:larger" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <label asp-for="Comment" class="control-label mb-0 fw-bold" style="font-size:larger">Комментарий</label>
                <input asp-for="Comment" class="form-control" style="width:300px;font-size:larger" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="form-group">
            <input type="submit" value="Добавить" style="width:300px; background-color: #8fc4b7;"
                   class="btn btn-success btn-block btn-lg text-body justify-content-center" />
        </div>
    </form>
</div>

@if (ViewData["Error"] != null)
{
    <link rel='stylesheet' href='/css/smoke-pure.css'>
    <script src="/js/smoke-pure.js"></script>
