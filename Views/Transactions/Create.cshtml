        window.onload = function () {
            if ("@ViewData["Error"]" == "Limit") {
                smoke.alert("Превышен лимит по данной категории!!!");
            }

        };
        @*function ChT() 
        {
            if ($('#TypeOfTransactionId').val()==1)
                smoke.alert($('#TypeOfTransactionId').val());
